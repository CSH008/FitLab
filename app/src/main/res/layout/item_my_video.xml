<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#8BBC60"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:tag="Hover">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_2sdp"
            android:orientation="vertical">

            <com.jq.app.ui.widgets.MyMediaImageView
                android:id="@+id/video_thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/dark_gray"
                android:scaleType="centerCrop"
                android:src="@mipmap/sample_video_image" />

            <ImageView
                android:id="@+id/icon_play"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@mipmap/video" />
            <TextView
                android:id="@+id/text_view_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text=""
                android:fontFamily="@font/open_sans_bold"
                android:background="#76000000"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_alignTop="@+id/video_thumb"
                android:layout_alignBottom="@+id/video_thumb"
                android:layout_height="match_parent" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
